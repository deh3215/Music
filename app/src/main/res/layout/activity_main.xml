<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a32150.music.MainActivity">

    <TextView
        android:layout_width="368dp"
        android:layout_height="22dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginLeft="-43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Play"
        app:layout_constraintLeft_toRightOf="@+id/btn_stop"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_prev"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Prev"
        app:layout_constraintLeft_toRightOf="@+id/btn_pause"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Next"
        app:layout_constraintLeft_toRightOf="@+id/btn_prev"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Pause"
        app:layout_constraintLeft_toRightOf="@+id/btn_play"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="360dp"
        android:layout_height="229dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_pause"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
